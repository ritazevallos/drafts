	$('#form-container').html("<%= escape_javascript(render 'draftForm', editdraft: @replaceDraft) %>");

	$('#form-container').hide();//for some reason I have to do this for the content 
	$('#form-container').show();//to be updated
	$('#diff-container').hide();
}