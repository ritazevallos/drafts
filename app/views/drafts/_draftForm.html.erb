<div id="draftForm" data-currentdraft="<%= editdraft.id %>">
	<%= form_for editdraft, remote: true do |f| %>
		<ul class="errors"></ul>
		<div class="form-group">
			<%= f.text_area :content, class: 'bigTextArea' %>
		</div>
		<%= f.submit "Save Draft", class: "btn btn-primary", id: 'formButton' %>
	<% end %>
</div>

<script>
console.log( "current draft: " + $('#draftForm').data('currentdraft') );

var map = {91: false, 83: false}; //91: command; 83: S
$(document).keydown(function(e) {
    if (e.keyCode in map) {
        map[e.keyCode] = true;
        if (map[91] && map[83]) {
            $('#formButton').click();
            e.preventDefault();
        }
    }
}).keyup(function(e) {
    if (e.keyCode in map) {
        map[e.keyCode] = false;
    }
});

</script>

